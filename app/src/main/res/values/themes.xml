<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.StyleTraining" parent="Theme.MaterialComponents.DayNight.NoActionBar" >

        <item name="colorPrimary">@color/color_brand</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_second_brand</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="widget.text.primary">@style/MyPrimaryTextStyle</item>
        <item name="widget.text.secondary">@style/MySecondaryTextStyle</item>
        <item name="appBarLayoutStyle">@style/MyAppbarStyle</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="widget.cardView">@style/MyCardViewStyle</item>
    </style>

    <style name="Theme.PagingSample" parent="Base.Theme.StyleTraining">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyPrimaryTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/dimen_text_primary</item>
    </style>

    <style name="MyBoldPrimaryTextStyle" parent="MyPrimaryTextStyle">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/dimen_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySecondaryTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/dimen_text_secondary</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/color_brand</item>
    </style>

    <style name="MyAppbarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/color_second_background</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">@dimen/dimen_toolbar_elevation</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="background">@color/color_second_background</item>
        <item name="titleTextColor">@color/color_brand</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_second_background</item>
        <item name="cardCornerRadius">@dimen/dimen_main_radius</item>
        <item name="cardElevation">@dimen/dimen_main_elevation</item>
    </style>

    <style name="MyOutlinedImageViewStyle">
        <item name="cornerSize">@dimen/dimen_main_radius</item>
    </style>
</resources>